XF86Audio{Prev,Play,Stop,Next,LowerVolume,RaiseVolume}
	playerctl --all-players {previous,play-pause,stop,next}


XF86AudioMute
	pamixer  -t; pkill -RTMIN+10 blocks && dunstify -r 1 "$( [[ $(pamixer --get-mute) == "false" ]] && echo  "$(pamixer --get-volume) ðŸ”Š" || echo "ðŸ”‡")"

XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}; pkill -RTMIN+10 blocks && dunstify -r 1 "$(pamixer --get-volume) $( [[ $(pamixer --get-mute) == "false" ]] && echo  ðŸ”Š || echo ðŸ”‡)"

XF86MonBrightness{Down,Up}
	sudo xbacklight -{dec,inc} 3 && dunstify -r 2 "$(xbacklight -get) ðŸŒž"

super + {n}
	rofi -show combi -modi combi,window,run,keys,ssh

