XF86Audio{Prev,Play,Stop,Next,LowerVolume,RaiseVolume}
	playerctl --all-players {previous,play-pause,stop,next}


XF86AudioMute
	pamixer  -t; pkill -RTMIN+10 blocks
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}; pkill -RTMIN+10 blocks

XF86MonBrightness{Down,Up}
	xbacklight -{dec,inc} 2

super + {n}
	rofi -show combi -modi combi,window,run,keys,ssh

super + {w,o,e,u,Escape,p}
  { $BROWSER,$FILE,$TERMINAL -e ranger,$TERMINAL -e calcurse , $TERMINAL -e htop, transmission-daemon && $TERMINAL -e tremc}

super + period
	rofimoji

super + shift + q
	sysact

super + Print
	dmenurecord

super + Delete
	dmenurecord kill

super + shift + {m,s}
	{dmenumount,flameshot gui}

super + F8
	networkmanager_dmenu

super + F7
	displayselect

super + F11
  translate

alt + grave
	copyq toggle


super + ctrl + l
	lockscreen

super + {bracketleft,bracketright}
	transset-df {--dec,--inc} .08 -a
